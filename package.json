{
  "name": "demod_backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "build": "npx rimraf ./dist && tsc",
    "dev": "ts-node ./src/index.ts",
    "watch": "tsc-watch --onSuccess \"ts-node ./src/index.ts\"",
    "start": "node ./dist/index.js",
    "start:force": "tsx ./src/index.ts",
    "pm2r": "pm2 restart ./dist/index.js --update-env",
    "seed:run": "npx knex seed:run --knexfile ./dist/database/knexfile.js",
    "seed:make": "npx knex seed:make --knexfile ./dist/database/knexfile.js",
    "migrate:latest": "knex migrate:latest --knexfile ./src/database/knexfile.ts",
    "migrate:make": "knex migrate:make --migrations-directory ./src/database/migrations -x ts",
    "migrate:rollback": "knex migrate:rollback --knexfile ./src/database/knexfile.ts",
    "i18n": "typesafe-i18n",
    "docker:build": "docker build -t tridmo-api:latest --target production .",
    "docker:build:dev": "docker build -t tridmo-api:dev --target development .",
    "docker:up": "docker compose up -d",
    "docker:up:dev": "docker compose -f docker compose.dev.yml up -d",
    "docker:down": "docker compose down",
    "docker:down:dev": "docker compose -f docker compose.dev.yml down",
    "docker:logs": "docker compose logs -f api",
    "docker:logs:dev": "docker compose -f docker compose.dev.yml logs -f api",
    "docker:logs:db": "docker compose logs -f db",
    "docker:restart": "docker compose restart api",
    "docker:restart:dev": "docker compose -f docker compose.dev.yml restart api",
    "docker:shell": "docker compose exec api sh",
    "docker:shell:dev": "docker compose -f docker compose.dev.yml exec api sh",
    "docker:db:shell": "docker compose exec db psql -U postgres -d tridmo_db",
    "docker:db:shell:dev": "docker compose -f docker compose.dev.yml exec db psql -U postgres -d tridmo_db_dev",
    "docker:migrate": "docker compose exec api npm run migrate:latest",
    "docker:migrate:dev": "docker compose -f docker compose.dev.yml exec api npm run migrate:latest",
    "docker:seed": "docker compose exec api npm run seed:run",
    "docker:seed:dev": "docker compose -f docker compose.dev.yml exec api npm run seed:run",
    "docker:clean": "docker system prune -f && docker volume prune -f",
    "docker:rebuild": "docker compose down && docker compose up -d --build",
    "docker:rebuild:dev": "docker compose -f docker compose.dev.yml down && docker compose -f docker compose.dev.yml up -d --build",
    "docker:backup:db": "docker compose exec db pg_dump -U postgres tridmo_db > backup-$(date +%Y%m%d-%H%M%S).sql",
    "docker:status": "docker compose ps",
    "docker:health": "curl -f http://localhost:4000/health",
    "docker:datadog:logs": "docker compose logs -f datadog",
    "docker:datadog:logs:dev": "docker compose -f docker compose.dev.yml logs -f datadog",
    "docker:datadog:restart": "docker compose restart datadog",
    "docker:datadog:restart:dev": "docker compose -f docker compose.dev.yml restart datadog",
    "docker:datadog:shell": "docker compose exec datadog bash",
    "docker:datadog:shell:dev": "docker compose -f docker compose.dev.yml exec datadog bash"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.622.0",
    "@aws-sdk/s3-request-presigner": "^3.622.0",
    "@supabase/supabase-js": "^2.26.0",
    "@types/bcrypt": "^5.0.0",
    "@types/lodash": "^4.14.182",
    "@types/mime-types": "^2.1.4",
    "@types/uuid": "^10.0.0",
    "axios": "^1.2.2",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "console-stamp": "^3.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "datadog-winston": "^1.6.0",
    "dd-trace": "^5.62.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "flat": "^5.0.2",
    "helmet": "^5.1.1",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.2.0",
    "lodash": "^4.17.21",
    "luxon": "^3.5.0",
    "md5": "^2.3.0",
    "mime-types": "^2.1.35",
    "moment-timezone": "^0.5.47",
    "morgan": "^1.10.0",
    "nanoid": "^5.1.2",
    "nodemailer": "^6.7.8",
    "pg": "^8.7.3",
    "request-ip": "^3.3.0",
    "rimraf": "^6.0.1",
    "sharp": "^0.32.0",
    "slugify": "^1.6.5",
    "swagger-ui-express": "^4.5.0",
    "tsoa": "^4.1.1",
    "typesafe-i18n": "^5.26.2",
    "unique-username-generator": "^1.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.1",
    "@types/i18n": "^0.13.10",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/luxon": "^3.4.2",
    "@types/morgan": "^1.9.3",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^18.7.14",
    "@types/nodemailer": "^6.4.5",
    "@types/request-ip": "^0.0.37",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^7.3.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "tsx": "^4.7.1",
    "typescript": "^4.7.4"
  }
}
