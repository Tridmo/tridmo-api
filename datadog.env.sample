# Datadog Configuration
# Copy this file to datadog.env and update with your actual values

# Required: Your Datadog API Key
DD_API_KEY=your_datadog_api_key_here

# Required: Datadog Site (choose your region)
# US1: datadoghq.com
# US3: us3.datadoghq.com  
# US5: us5.datadoghq.com
# EU1: datadoghq.eu
# AP1: ap1.datadoghq.com (Asia Pacific)
# GOV: ddog-gov.com (US Government)
DD_SITE=ap1.datadoghq.com

# Environment name (production, staging, development, etc.)
DD_ENV=production

# Optional: Service version for APM tracking
DD_VERSION=1.0.0

# Optional: Additional tags (comma-separated)
DD_TAGS=team:backend,component:api

# Optional: Enable/disable specific features
DD_LOGS_ENABLED=true
DD_APM_ENABLED=true
DD_PROCESS_AGENT_ENABLED=true
DD_DOGSTATSD_NON_LOCAL_TRAFFIC=true

# Optional: Custom configuration
DD_HOSTNAME=tridmo-api-server 